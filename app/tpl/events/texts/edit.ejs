<div class="text">

	<div class="control-group">
		<label>Author</label>
		<input type="text" class="span8" name="texts[<%= i %>][author]" value="<%= text ? text.author : '' %>">
	</div>

	<div class="control-group">
		<label>Title</label>
		<input type="text" class="span8" name="texts[<%= i %>][title]" value="<%= text ? text.title : '' %>">
	</div>

	<div class="control-group">
		<label>Pad</label>
		<input type="text" class="span8 pad-typeahead" autocomplete="off" name="texts[<%= i %>][pad]" value="<%= text ? text.pad ? text.pad.name : '' : '' %>">
	</div>

	<div class="control-group">
		<label>Info</label>
		<textarea name="texts[<%= i %>][info]" id="text_<%= i %>_info_textarea" class="wysiwyg span12"><%= text ? text.info : '' %></textarea>
	</div>
	<div class="control-group">
		<label>Bios</label>
		<textarea name="texts[<%= i %>][bios]" id="text_<%= i %>_bios_textarea" class="wysiwyg span12"><%= text ? text.bios : '' %></textarea>
	</div>

	<div class="control-group">
		<label>Chat Log</label>
		<div class="controls">
			<div class="input-append datetimepicker">
				<input type="text" name="texts[<%= i %>][chat_start]" class="" value="<%= text ? format_datetime( text.chat_start ) : '' %>" />
				<span class="add-on"><i class="icon-calendar"></i></span>
			</div>
			<div class="input-append datetimepicker">
				<input type="text" name="texts[<%= i %>][chat_end]" class="" value="<%= text ? format_datetime( text.chat_end ) : '' %>" />
				<span class="add-on"><i class="icon-calendar"></i></span>
			</div>
			<span class="help-inline">Pick a date or paste one from <a href='/chats' target='_blank'>Chat log</a></span>
		</div>
	</div>
		
		
	<div class="control-group">
		<label>&nbsp;</label>
		<% if( text ) { %>
			<input type="submit" class="pull-right btn btn-danger" name="texts[<%= i %>][remove]" value="Remove" />
		<% }else{ %>
			<input type="submit" class="pull-right btn btn-primary" value="Add" />
		<% } %>
	</div>
</div>
<div class="clearfix"></div>	